worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 768;
}

http {
  types_hash_max_size 2048;
  include mime.types;
  # force www version
  server {
    listen <%= ENV["PORT"] %>;
    server_name  asktherelic.com;
    rewrite ^/(.*) http://www.asktherelic.com/$1 permanent;
  }
  server {
    listen <%= ENV["PORT"] %>;
    server_name  www.asktherelic.com;
    <% if ENV["ROOT"] %>
      root /app/www/<%= ENV["ROOT"] %>;
    <% else %>
      root /app/www;
    <% end %>
    index index.html index.xml;
    # Fix trailing slash 301 behavior; nginx was redirecting to host:port
    if (-d $request_filename) {
        rewrite [^/]$ $scheme://$http_host$uri/ permanent;
    }
  }
}
