# docker app INTERNAL nginx config
worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 768;
}

http {
  types_hash_max_size 2048;
  include mime.types;

  # Force canonical https www version
  #server {
  #  listen <%= ENV["PORT"] %>;
  #  server_name  asktherelic.com;
  #  rewrite ^/(.*) $scheme://www.asktherelic.com/$1 permanent;
  #}

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;
    # NOTE: using custom 'build' dir to serve this app
    root /app/www/build;
    access_log  /tmp/access.log;
    error_log   /tmp/error.log;

    index index.html index.htm index.xml;

    # More RSS feed fixing
    location /feed/ { rewrite ^ $scheme://$http_host/code/feed/ permanent;}

    # Fix trailing slash 301 behavior; nginx was redirecting to host:port
    #if (-d $request_filename) {
    #    rewrite [^/]$ $scheme://$http_host$uri/ permanent;
    #}
  }
}
